<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE3232"
    android:backgroundTint="#CE3232"
    tools:context=".PokedexCards">

    <ImageView
        android:id="@+id/logoPokemon"
        android:layout_width="261dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/international_pok_mon_logo_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="7dp"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxBackgroundColor="#FFFEFE"
        app:layout_constraintEnd_toStartOf="@+id/filtro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoPokemon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nomePokemonBuscado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_filter"
            android:hint="Digite o nome do pokemon" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/filtro"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/bg_rounded_filter"
        android:onClick="abrirBottomSheetParaFiltrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/logoPokemon"
        app:srcCompat="@drawable/filter_alt_24dp_000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardsPokemon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:listitem="@layout/card" />

</androidx.constraintlayout.widget.ConstraintLayout>
