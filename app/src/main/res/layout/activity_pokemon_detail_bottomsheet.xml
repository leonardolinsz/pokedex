<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    android:orientation="vertical">

<LinearLayout
android:id="@+id/cardContainer"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="16dp"
android:orientation="vertical"
android:background="@drawable/bg_white_card"
android:layout_centerInParent="true"
android:padding="16dp">

<TextView
    android:id="@+id/tvForca"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Força 34"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:paddingTop="8dp"/>

<ImageView
    android:id="@+id/imgPokemonGif"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:scaleType="fitCenter"
    android:contentDescription="Gif Pokémon" />

<TextView
    android:id="@+id/tvNomePokemon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Doduo"
    android:textSize="28sp"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:paddingTop="8dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tvHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP 13/100"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"/>

    <ProgressBar
        android:id="@+id/progressHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="8dp"
        android:progress="13"
        android:max="100"
        android:progressDrawable="@drawable/progress_hp"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tvTipos"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Normal / Flying"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPeso"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="57.49 kg"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvAltura"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="1.57 m"
        android:gravity="center"
        android:textSize="14sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:text="Ataque especial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAtaqueEspecial"
            android:text="60"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:text="Defesa especial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDefesaEspecial"
            android:text="60"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:text="Velocidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvVelocidade"
            android:text="60"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>

<ImageButton
    android:id="@+id/btnVoltar"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:src="@drawable/ic_arrow_down"
    android:background="@drawable/bg_circle"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="16dp"
    android:contentDescription="Voltar" />

    </RelativeLayout>
